@model ICollection<MVCEntityFramework.Models.Employee>
@{
    ViewBag.Title = "Index";
}

<h2>Employee Details</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.EmpId</td>
                <td>@emp.EmpFirstName</td>
                <td>@emp.EmpLastName</td>
                <td>@emp.EmpEmail</td>
                <td>@emp.Salary</td>
                <td>@Html.ActionLink("Update", "Update", "Employee", new { @id = emp.EmpId }, htmlAttributes: new { @class = "btn btn-primary" })</td>
                <td>@Html.ActionLink("Delete", "Delete", new { @id = emp.EmpId }, htmlAttributes: new { @class = "btn btn-danger" })</td>
            </tr>
        }
    </table>
}
else
{
    <span class="alert-danger">No Records found..</span>
}

